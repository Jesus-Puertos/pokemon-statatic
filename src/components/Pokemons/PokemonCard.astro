---
interface Props {
    name: string;
    url: string;
    isBig?: boolean;
}
const { name, url, isBig = false } = Astro.props;

const id = url.split("/").at(-2);
const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<!-- class={`rounded  flex flex-col justify-center items-center p-2 ${!isBig && "border"}`} --><!-- Mostrar imagen del pokemon, buscar el official  artwork--><!-- href=`/pokemons/${name}` -->
<a
    href=`/pokemons/${name}`
    class:list={[
        `rounded  flex flex-col justify-center items-center p-2`,
        {
            border: !isBig,
        },
    ]}
>
    <!-- W-26 h-26 isBig -->
    <!-- w-16 h-16 !isBig -->
    <img
        transition:name={`${name}-image`}
        src={imageUrl}
        alt={name}
        class:list={[
            {
                "size-26": isBig,
                "size-22": !isBig,
            },
        ]}
    />
    <!-- Si estamos en big aplicar un text-3xl -->
    <span
        class:list={[
            "capitalize",
            {
                "text-3xl": isBig,
            },
        ]}>#{id} {name}</span
    >
</a>
